{
    // https://code.visualstudio.com/Docs/editor/tasks
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Blame",
            "type": "shell",
            "command": "git blame --date=relative '${file}'",
            "presentation": {
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Blame line",
            "type": "shell",
            "command": "git blame --date=relative -L ${lineNumber},+1 '${file}'",
            "problemMatcher": []
        },
