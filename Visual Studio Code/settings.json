{
    "breadcrumbs.enabled": true,

    "editor.autoIndent": false,
    "editor.formatOnSaveTimeout": 2000,
    "editor.minimap.enabled": false,
    "editor.minimap.showSlider": "always",
    "editor.renderIndentGuides": true,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "all",
    "editor.rulers": [88],
    "editor.tabSize": 4,

    "extensions.autoUpdate": true,
    "extensions.ignoreRecommendations": true,

    "files.associations": {
        "*.erb": "html",
        "Dockerfile.*": "dockerfile",
        "*.sls": "yaml"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "*.egg-info": true,
        ".pytest_cache": true,
        "**/__pycache__": true,
        ".coverage": true,
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,

    "terminal.integrated.rendererType": "canvas",

    "window.openFilesInNewWindow": "off",
    "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}",

    "workbench.activityBar.visible": false,
    "workbench.editor.tabCloseButton": "off",
    "workbench.colorCustomizations": {
        "editor.lineHighlightBackground": "#eeeeee",
        "editor.selectionHighlightBackground": "#ffdd00",
        "editorBracketMatch.background": "#ffdd00",
        "editorBracketMatch.border": "#ffdd00",
        "statusBar.background": "#000000",
        "terminal.background": "#222222",
        "terminal.foreground": "#ffffff",
        "terminal.selectionBackground": "#0011ff77"
    },
    "workbench.colorTheme": "Visual Studio Light",
    "workbench.iconTheme": "vs-minimal",
    "workbench.quickOpen.closeOnFocusLost": false,
    "workbench.settings.editor": "json",

    "[python]": {
        "editor.formatOnSave": true,
    },

    "[ruby]": {
        "editor.tabSize": 2
    },

    "[javascript]": {
        "editor.rulers": [120],
        "editor.formatOnSave": true,
    },
    "javascript.updateImportsOnFileMove.enabled": "always",

    "[markdown]": {
        "editor.formatOnSave": true,
    },

    // Extensions

    "todohighlight.isCaseSensitive": false,
    "todohighlight.keywords": [
        {
            "text": "TODO GZL",
            "color": "white",
            "backgroundColor": "darkorange",
        },
        {
            "text": "TODO",
            "color": "white",
            "backgroundColor": "darkorange",
        },
        {
            "text": "TODO:",
            "color": "white",
            "backgroundColor": "darkorange",
        },
        {
            "text": "FIXME",
            "color": "white",
            "backgroundColor": "darkorange",
        },
        {
            "text": "FIXME:",
            "color": "white",
            "backgroundColor": "darkorange",
        },
        {
            "text": "print",
            "color": "white",
            "backgroundColor": "deeppink",
        },
        {
            "text": "@pytest.mark.x",
            "color": "white",
            "backgroundColor": "deeppink",
        },
    ],

    "python.formatting.provider": "black",
    "python.formatting.blackPath": "/PATH/TO/black",
    "python.linting.prospectorEnabled": true,
    "python.linting.prospectorPath": "/PATH/TO/prospector",
    "python.linting.pylintEnabled": false,
}
