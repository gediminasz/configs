{
    "breadcrumbs.enabled": true,
    "editor.formatOnSave": true,
    "editor.minimap.maxColumn": 80,
    "editor.minimap.showSlider": "always",
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "all",
    "editor.tabSize": 4,
    "extensions.autoUpdate": true,
    "extensions.ignoreRecommendations": true,
    "files.associations": {
        "Dockerfile.*": "dockerfile",
        "*.sls": "yaml"
    },
    "files.exclude": {
        ".coverage": true,
        ".pytest_cache": true,
        ".tags": true,
        ".venv": true,
        "*.egg-info": true,
        "**/__pycache__": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.svn": true,
        "**/CVS": true,
        "htmlcov": true,
        "node_modules": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/.hg/store/**": true,
        "**/.venv/**": true
    },
    "search.exclude": {
        "**/node_modules": true,
        ".slskit": true,
        ".vscode/.tags": true,
        "poetry.lock": true
    },
    "search.useIgnoreFiles": false,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "window.openFilesInNewWindow": "off",
    "window.title": "${dirty}${activeEditorShort}${separator}${remoteName}${separator}${rootName}",
    "workbench.activityBar.visible": false,
    "workbench.colorCustomizations": {
        "editor.lineHighlightBackground": "#eeeeee",
        "editor.selectionHighlightBackground": "#ffdd00",
        "editorBracketMatch.background": "#ffdd00",
        "editorBracketMatch.border": "#ffdd00",
        "statusBar.background": "#000000",
        "terminal.background": "#222222",
        "terminal.foreground": "#ffffff",
        "terminal.selectionBackground": "#0011ff77"
    },
    "workbench.colorTheme": "Visual Studio Light",
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.limit.value": 5,
    "workbench.editor.tabCloseButton": "off",
    "workbench.iconTheme": "vs-minimal",
    "workbench.quickOpen.closeOnFocusLost": false,
    "workbench.settings.editor": "json",
    "git.enabled": false,
    "terminal.integrated.shell.osx": "zsh",
    "terminal.integrated.scrollback": 10000,
    "task.quickOpen.showAll": true,
    //
    //
    // Language specifics
    //
    "[python]": {
        "editor.rulers": [
            88
        ]
    },
    "[javascript]": {
        "editor.rulers": [
            120
        ]
    },
    "javascript.format.semicolons": "insert",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "markdown.preview.scrollEditorWithPreview": false,
    "markdown.preview.scrollPreviewWithEditor": false,
    //
    //
    // Extensions:
    // - Ctags Companion
    // - ESLint
    // - Just Testing
    // - Markdown Preview Mermaid Support
    // - Markdown Table Formatter
    // - Save and Run
    //
    "ctags-companion.documentSelector": [
        "python"
    ],
    "ctags-companion.command": "ctags -R --fields=+nKz -f .vscode/.tags --python-kinds=-i --languages=python",
    //
    "saveAndRun": {
        "commands": [
            {
                "match": "\\.py$",
                "cmd": "black ${file}",
                "silent": true
            },
            {
                "match": "\\.py$",
                "cmd": "isort --profile black ${file}",
                "silent": true
            }
        ]
    }
}
